


<!-- Wrapper just puts child content in a card-->
<DataPointWrapper Title="Active Campaigns">

    <!-- Re-usable table element binds this.Data to Table.TableData-->
    <Table TableData=@Data/>
</DataPointWrapper>



@code {

    // Sets the table data
    public Data.Table.Table Data { get; set; } = new Data.Table.Table()
    {
        ColumnInfo =
        {
            new Data.Table.ColumnInfo() {Name = "Campaign"},
            new Data.Table.ColumnInfo() {Name = "# Users"},
            new Data.Table.ColumnInfo() {Name = "Phish %"},
            new Data.Table.ColumnInfo() {Name = "Progress", Type = Dashboard.Data.Table.ColumnInfo.ColumnType.ProgressBar}
        },
        Data =
        {
            new string[] {"Customer Service", "113", "13%", "100%"},
            new string[] {"Data Entry", "42", "7%", "75%"},
            new string[] {"IS", "14", "1.5%", "34%"},
            new string[] {"Partner Services", "18", "16%", "43%"},
        }
    };
}