
<table class="table-bordered table-responsive-lg">
	<thead>
		<tr>
			@foreach(var row in Table.ColumnInfo)
			{
				<td class="px-3 py-2" style="background-color: rgb(70, 72, 84); color: white"><b>@row.Name</b></td>
			}
		</tr>
	</thead>
	<tbody class="">
	@foreach(var row in Table.Data)
	{
		<tr>
			@for (int i = 0; i < row.Length; i++)
			{
				@switch(Table.ColumnInfo[i].Type)
				{
					case DashboardAPI.Data.ColumnType.Text:
						<td class="px-3 py-2">@row[i]</td>
						break;
					case DashboardAPI.Data.ColumnType.ProgressBar:
						<td class="p-2">
							<div class="progress">
							  <div style="width: @row[i]%" class="progress-bar progress-bar-animated progress-bar-striped" role="progressbar"></div>
							</div>
						</td>
						break;
					case DashboardAPI.Data.ColumnType.Percent:
						<td class="px-3 py-2"><b>@Math.Round(Double.Parse(row[i]), 2)%</b></td>
						break;
				}
			}
		</tr>
	}
	</tbody>
</table>



@code {

	[Parameter]
	public DashboardAPI.Data.Table Table { get; set; } = new DashboardAPI.Data.Table();
}
